<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.nyit.bfarre01.nyitchallenge" >

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_title"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="edu.nyit.bfarre01.nyitchallenge.StartActivity"
            android:label="@string/app_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.nyit.bfarre01.nyitchallenge.LoginActivity"
            android:label="@string/app_title" >
        </activity>
        <activity
            android:name="edu.nyit.bfarre01.nyitchallenge.FriendsActivity"
            android:label="@string/action_friends"
            android:parentActivityName="edu.nyit.bfarre01.nyitchallenge.MainActivity" >
        </activity>
        <activity
            android:name="edu.nyit.bfarre01.nyitchallenge.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:parentActivityName="edu.nyit.bfarre01.nyitchallenge.MainActivity" >
        </activity>
        <activity
            android:name="edu.nyit.bfarre01.nyitchallenge.MainActivity"
            android:label="@string/app_title" >
        </activity>
        <activity
            android:name="edu.nyit.bfarre01.nyitchallenge.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName="edu.nyit.bfarre01.nyitchallenge.MainActivity" >
        </activity>
        <activity
            android:name="edu.nyit.bfarre01.nyitchallenge.ChallengeViewActivity"
            android:label="@string/app_title"
            android:parentActivityName="edu.nyit.bfarre01.nyitchallenge.MainActivity" >
        </activity>
        <activity
            android:name="edu.nyit.bfarre01.nyitchallenge.RegisterActivity"
            android:label="@string/app_title" >
        </activity>
    </application>

</manifest>
